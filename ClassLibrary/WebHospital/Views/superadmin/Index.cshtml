@model IEnumerable<ClassLibrary.user>

@{
    ViewBag.Title = "Index";
}

<h2>系统管理员主页</h2>

<p>
    @Html.ActionLink("创建新员工/用户", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IDNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.roleID)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IDNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.password)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.roleID)
        </td>
        <td>
            @Html.ActionLink("修改", "Edit", new { id=item.IDNumber }) |
            @Html.ActionLink("详细", "Details", new { id=item.IDNumber }) |
            @Html.ActionLink("删除", "Delete", new { id=item.IDNumber })
        </td>
    </tr>
}

</table>
