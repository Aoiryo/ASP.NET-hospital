@model ClassLibrary.medicine

@{
    ViewBag.Title = "Delete";
}

<h2>删除</h2>

<h3>确定删除吗？</h3>
<div>
    <h4>药品</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            药品名
        </dt>

        <dd>
            @Html.DisplayFor(model => model.medicine1)
        </dd>

        <dt>
            价格
        </dt>

        <dd>
            @Html.DisplayFor(model => model.price)
        </dd>

        <dt>
            剩余数量
        </dt>

        <dd>
            @Html.DisplayFor(model => model.medicineRemainingQuantity)
        </dd>

        <dt>
